<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/taxonomy_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/taxonomy_textview_recyclerview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="32dp"
            android:layout_weight="5"
            android:lines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/taxonomy_arrow_textview_recyclerview"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:contentDescription="@string/image_arrow"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="@+id/taxonomy_textview_recyclerview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/taxonomy_textview_recyclerview"
            app:layout_constraintTop_toTopOf="@+id/taxonomy_textview_recyclerview" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>