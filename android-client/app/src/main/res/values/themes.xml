<resources>
    <!-- Base application theme. -->
    <style name="Theme.SLRToolkit" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#898121</item>
        <item name="colorPrimaryVariant">#F7F1E5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F7F1E5</item>
        <item name="colorSecondaryVariant">#E7B10A</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/material_dynamic_neutral90</item>
    </style>

    <style name="Theme.SLRToolkit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SLRToolkit.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SLRToolkit.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>